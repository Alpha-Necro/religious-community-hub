{
  "name": "religious-community-hub",
  "version": "1.0.0",
  "description": "Religious Community Hub Application",
  "main": "src/server.ts",
  "scripts": {
    "emergency-shutdown": "node scripts/emergency-shutdown.js",
    "start": "ts-node src/server.ts",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "monitor:performance": "node server/scripts/monitor-performance.js",
    "optimize:database": "node server/scripts/optimize-database.js",
    "analyze:queries": "node server/scripts/analyze-queries.js",
    "cache:stats": "node server/scripts/cache-stats.js",
    "request:stats": "node scripts/request-stats.js",
    "validate:db": "ts-node server/scripts/validateDatabaseConnection.ts",
    "db:init": "ts-node scripts/initializeDatabase.ts",
    "db:setup-permissions": "ts-node scripts/setupPermissions.ts",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "docker:build": "docker build -t religious-community-hub .",
    "docker:run": "docker run -p 3000:3000 religious-community-hub",
    "docker:dev": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:exec": "docker-compose exec server bash",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:build:prod": "docker build -t religious-community-hub:prod -f Dockerfile.prod .",
    "docker:run:prod": "docker run -p 3000:3000 religious-community-hub:prod",
    "docker:deploy": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hapi/joi": "^17.1.1",
    "@mui/icons-material": "^6.4.8",
    "@mui/material": "^6.4.8",
    "@sentry/node": "^9.8.0",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@types/pg": "^8.11.11",
    "@types/ws": "^8.18.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "i18next": "^23.7.19",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.2.2",
    "ioredis": "^5.6.0",
    "joi": "^17.13.3",
    "joi-password-complexity": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.14.1",
    "react-i18next": "^14.0.0",
    "redis": "^4.7.0",
    "sequelize": "^6.37.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "validator": "^13.11.0",
    "winston": "^3.10.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/connect-redis": "^0.0.21",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-rate-limit": "^6.0.2",
    "@types/express-session": "^1.17.7",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.8",
    "@types/multer": "^1.4.10",
    "@types/node": "^22.13.13",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.37",
    "@types/redis": "^4.0.11",
    "@types/sequelize": "^4.28.20",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/validator": "^13.9.0",
    "@types/winston": "^2.4.4",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  }
}
