{
  "database": {
    "user": "root",
    "password": "",
    "host": "localhost",
    "port": 3306,
    "name": "religious_community_hub",
    "dialect": "mysql"
  },
  "security": {
    "jwt": {
      "secret": "your-secret-key-here",
      "expiresIn": "7d"
    },
    "password": {
      "minLength": 8,
      "maxLength": 100,
      "requireLowercase": true,
      "requireUppercase": true,
      "requireNumbers": true,
      "requireSymbols": true
    },
    "csrf": {
      "cookie": {
        "httpOnly": true,
        "secure": false,
        "sameSite": "strict"
      }
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100,
      "standardHeaders": true,
      "legacyHeaders": false
    }
  },
  "api": {
    "version": "1.0.0",
    "baseUrl": "http://localhost:5000",
    "prefix": "/api",
    "responseTimeThreshold": 2000
  },
  "server": {
    "port": 5000,
    "environment": "development",
    "logLevel": "debug"
  },
  "cors": {
    "origin": "http://localhost:3000",
    "credentials": true,
    "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allowedHeaders": ["Content-Type", "Authorization", "X-CSRF-Token"]
  },
  "language": {
    "default": "en",
    "supported": ["en", "ar"]
  }
}
